{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "jsx": "react",
    "declaration": true,
    "allowJs": true,
    "isolatedModules": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/stories"
  ]
}
